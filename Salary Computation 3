import java.util.*;
public class Main{
    public static void main(String[] args)
        {
        double hra,da;
        Scanner sc=new Scanner(System.in);
        int salary=sc.nextInt();
        if(salary<15000)
            {
             hra=0.15*salary;
             da=0.90*salary;
            }
        else {
            hra=5000;
            da=0.98*salary;
            }
        System.out.printf("%.2f",hra+da+salary);
            }}
